{
  "scripts": {
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint-fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "build": "npx tsc src",
    "start": "node dist/index.js",
    "start:dev": "concurrently \"npx tsc src --watch\" \"nodemon -q dist/index.js\"",
    "prepare": "husky install",
    "precommit": "lint-staged && npm run lint",
    "prepush": "npm run lint"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}":[
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.9.0",
    "reflect-metadata": "^0.1.13",
    "stripe": "^11.10.0",
    "typeorm": "^0.3.12",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/express": "^4.17.17",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  }
}
